<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:gravity="bottom"
    android:orientation="vertical" >

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:shrinkColumns="0"
    android:stretchColumns="1" >

<TableRow
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="speed:1.0"
        />
    <SeekBar android:id="@+id/speed_seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200"
        android:progress="100"
        />
 </TableRow>
<TableRow
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/pitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pitch:1.0"
        />
    <SeekBar android:id="@+id/pitch_seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200"
        android:progress="100"
        />
 </TableRow>
<TableRow
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="volume:1.0"
        />
    <SeekBar android:id="@+id/volume_seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="150"
        android:progress="100"
        />
 </TableRow>
<TableRow
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/echo_delay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="effect delay:1.0" />

    <SeekBar android:id="@+id/echo_delay_seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200"
        android:progress="100"
        />
 </TableRow>
<TableRow
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/echo_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="effect vol.:0.3" />

    <SeekBar android:id="@+id/echo_volume_seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="90"
        android:progress="30"
        />
</TableRow>

</TableLayout>

<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" >

        <CheckBox
            android:id="@+id/reverse_flag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="逆再生"
            android:textSize="14sp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:background="@drawable/button01"
            android:onClick="onClickStartPlaying"
            android:text="play" />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button01"
            android:onClick="onClickRecord"
            android:text="record" />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button01"
            android:onClick="onClickReset"
            android:text="reset" />

    </TableRow>


</TableLayout>

</LinearLayout>
